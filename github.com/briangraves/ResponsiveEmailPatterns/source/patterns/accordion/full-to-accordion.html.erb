<style>
	/* Full to Accordion Pattern CSS */
	@media only screen and (max-width: 450px) {
        td[class="pattern"] .story {
            padding: 0 10px 0 10px !important;

        }
	    td[class="pattern"] .story p {
	        max-height: 0;
            overflow: hidden;

	    }
        td[class="pattern"] .story h1 a { display: block; position: relative; }
        td[class="pattern"] .story h1 a:after {
            content: '+';
            position: absolute;
            top: 0;
            right: 0;
            display: block;
        }
        td[class="pattern"] #story1:target p,
        td[class="pattern"] #story2:target p,
        td[class="pattern"] #story3:target p {
            max-height: 999px;
            margin-bottom: 30px;
            -webkit-transition: max-height 0.5s ease-out;
            -moz-transition: max-height 0.5s ease-out;
            -ms-transition: max-height 0.5s ease-out;
            -o-transition: max-height 0.5s ease-out;
            transition: max-height 0.5s ease-out;
        }
	}
</style>
<% end %>

