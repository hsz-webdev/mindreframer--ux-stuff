<% content_for :css do %>
<style>
	/* 4-Up Grid Block Pattern CSS */
	@media only screen and (max-width: 599px) {
        td[class="pattern"] table { width: 100%; }
        td[class="pattern"] .spacer { display: none; }
        td[class="pattern"] .section {
            display: block;
            float: left;
            height: auto;
            padding: 60px 20px;
            margin-bottom: 8px;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }
        td[class="pattern"] .section {
            width: 23%;
            margin-left: 2.66666667%;
        }
        td[class="pattern"] .section:first-child { margin-left: 0; }
	}
    @media only screen and (max-width: 550px) {
        td[class="pattern"] .section {
            width: 32%;
            margin-left: 2%;
        }
    }
</style>
<% end %>

