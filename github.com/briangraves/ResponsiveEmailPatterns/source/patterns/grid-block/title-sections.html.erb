<% content_for :css do %>
<style>
	/* Gridblock with Title Sections Pattern CSS */
	@media only screen and (max-width: 500px) {
        td[class="pattern"] table { width: 100%; }
        td[class="pattern"] .spacer { display: none; }
        td[class="pattern"] .section-title,
        td[class="pattern"] .section-row {
            display: block;
            height: auto;
        }
        td[class="pattern"] .section-title {
            width: 100%;
            padding: 20px 0;
            margin-bottom: 8px;
        }
        td[class="pattern"] .section-row { width: 100%; }
        td[class="pattern"] .section-row .section {
            display: block;
            float: left;
            width: 32%;
            height: auto;
            margin-left: 2%;
            padding: 60px 20px;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }
        td[class="pattern"] .section-row .section:first-child { margin-left: 0; }
	}
    @media only screen and (max-width: 400px) {
        td[class="pattern"] .grid-block { padding-bottom: 0 !important; }
        td[class="pattern"] .section-row .section {
            float: none;
            width: 100%;
            margin: 0 0 8px 0;
        }
    }
</style>
<% end %>

