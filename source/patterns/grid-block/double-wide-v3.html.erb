<% content_for :css do %>
<style>
	/* Double Wide v3 Pattern CSS */
	@media only screen and (max-width: 599px) {
        td[class="pattern"] table { width: 100%; }
        td[class="pattern"] .spacer { display: none; }
        td[class="pattern"] .row { padding: 0 !important; }
        td[class="pattern"] .section {
            display: block;
            float: left;
            height: auto;
            padding: 60px 20px;
            margin-bottom: 8px;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }
        td[class="pattern"] .section.half {
            width: 49%;
        }
        td[class="pattern"] .section.quarter {
            width: 23.5%;
        }
        td[class="pattern"] .section.half:first-child,
        td[class="pattern"] .section.quarter:first-child,
        td[class="pattern"] .section.quarter + .spacer + .section.half { margin-right: 2%; }
        td[class="pattern"] .section.full {
            width: 100%;
        }
	}
    @media only screen and (max-width: 420px) {
        td[class="pattern"] .section.half,
        td[class="pattern"] .section.quarter {
            width: 100%;
        }
        td[class="pattern"] .section.half:first-child { margin-right: 0; }
    }
</style>
<% end %>

